{
  "name": "vue-style-beautify",
  "displayName": "vue-style-beautify",
  "description": "beautify css in your vue project",
  "version": "0.1.2",
  "publisher": "xiguaxigua",
  "engines": {
    "vscode": "^1.18.0"
  },
  "categories": [
    "Formatters"
  ],
  "author": {
    "name": "xiguaxigua",
    "url": "https://daxigua.me"
  },
  "homepage": "https://github.com/xiguaxigua/vue-style-beautify/README.md",
  "repository": {
    "type": "git",
    "url": "https://github.com/xiguaxigua/vscode-vue-style-beautify.git"
  },
  "license": "MIT",
  "icon": "icon.png",
  "activationEvents": [
    "onCommand:vueStyle.beautify",
    "onLanguage:vue",
    "onLanguage:css",
    "onLanguage:less",
    "onLanguage:sass",
    "onLanguage:sass-indented",
    "onLanguage:scss"
  ],
  "main": "./extension",
  "contributes": {
    "commands": [
      {
        "command": "vueStyle.beautify",
        "title": "beautify css"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "vue style beautify config",
      "properties": {
        "vueStyle.formatOnSave": {
          "type": "boolean",
          "default": false,
          "description": "Auto format while save file.",
          "scope": "resource"
        },
        "vueStyle.ignoreFilesOnSave": {
          "type": "array",
          "default": [],
          "description": "files which not format on save",
          "scope": "resource"
        },
        "vueStyle.preset": {
          "type": "object",
          "default": {},
          "description": "csscomb settings",
          "scope": "resource"
        }
      }
    },
    "keybindings": [
      {
        "mac": "cmd+shift+i",
        "win": "shift+f10",
        "linux": "shift+f10",
        "key": "shift+f10",
        "command": "vueStyle.beautify",
        "when": "editorTextFocus"
      }
    ]
  },
  "scripts": {
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "node ./node_modules/vscode/bin/test",
    "deploy": "vsce publish"
  },
  "devDependencies": {
    "@types/mocha": "^2.2.42",
    "@types/node": "^7.0.43",
    "eslint": "^4.6.1",
    "typescript": "^2.6.1",
    "vscode": "^1.1.6"
  },
  "dependencies": {
    "csscomb": "^4.2.0",
    "micromatch": "^3.1.4"
  },
  "auto-changelog": {
    "template": "keepachangelog"
  }
}
